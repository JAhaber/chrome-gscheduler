{
    "name": "GScheduler",
    "version": "0.1.1",
    "manifest_version": 2,
    "description": "Forgot to log your time...again? Genome locking you out...again? Perhaps you just need a faster, easier way to log it.",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "browser_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "gScheduler"
    },
    "commands": {
        "show-gscheduler": {
            "suggested_key": {
                "default": "Ctrl+Shift+Comma"
            },
            "description": "Show the gScheduler"
        }
    },
    "background": {
        "scripts": [
            "scripts/chromereload.js",
            "scripts/background-bundle.js"
        ],
        "persistent": true
    },
    "permissions": [
        "tabs",
        "storage",
        "https://genome.klick.com/",
        "https://genome.klick.com/scheduler/#/day/now/"
    ],
    "options_ui": {
        // Required.
        "page": "options.html",
        // Recommended.
        "chrome_style": true
        // Not recommended; only provided for backwards compatibility,
        // and will be unsupported in a future version of Chrome (TBD).
        //"open_in_tab": true
    },
    "web_accessible_resources": ["images/genome.png"],

    "content_security_policy": "script-src 'self' https://genome.klick.com; object-src 'self'"
}